<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="10dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Register your account"
        android:textSize="@dimen/large_text_size"
        android:textStyle="bold"
        android:fontFamily="@font/sans"
        android:textColor="@color/colorPrimary"
        android:layout_gravity="center"
        android:gravity="center"
        android:layout_marginBottom="20dp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="10dp">
            <TextView
                android:layout_width="0dp"
                android:layout_height="@dimen/layout_height_register"
                android:text="First name"
                android:fontFamily="@font/sans"
                android:textColor="@color/colorPrimary"
                android:textStyle="bold"
                android:layout_weight="1"
                android:textSize="@dimen/small_sixteen_text_size"/>
            <EditText
                android:id="@+id/first_name"
                android:layout_width="0dp"
                android:layout_height="@dimen/layout_height_register"
                android:hint="First Name"
                android:layout_marginLeft="16dp"
                android:paddingLeft="10dp"
                android:layout_weight="2"
                android:background="@drawable/button_backgroung_rectangle"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="10dp">
            <TextView
                android:layout_width="0dp"
                android:layout_height="@dimen/layout_height_register"
                android:text="Last name"
                android:fontFamily="@font/sans"
                android:textColor="@color/colorPrimary"
                android:textStyle="bold"
                android:layout_weight="1"
                android:textSize="@dimen/small_sixteen_text_size"/>
            <EditText
                android:id="@+id/last_name"
                android:layout_width="0dp"
                android:layout_height="@dimen/layout_height_register"
                android:hint="Last Name"
                android:layout_marginLeft="16dp"
                android:paddingLeft="10dp"
                android:layout_weight="2"
                android:background="@drawable/button_backgroung_rectangle"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="10dp">
            <TextView
                android:layout_width="0dp"
                android:layout_height="@dimen/layout_height_register"
                android:text="Email address"
                android:fontFamily="@font/sans"
                android:textColor="@color/colorPrimary"
                android:textStyle="bold"
                android:layout_weight="1"
                android:textSize="@dimen/small_sixteen_text_size"/>
            <EditText
                android:id="@+id/email"
                android:layout_width="0dp"
                android:layout_height="@dimen/layout_height_register"
                android:hint="Email"
                android:layout_marginLeft="16dp"
                android:paddingLeft="10dp"
                android:layout_weight="2"
                android:background="@drawable/button_backgroung_rectangle"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="10dp">
            <TextView
                android:layout_width="0dp"
                android:layout_height="@dimen/layout_height_register"
                android:text="Password"
                android:textColor="@color/colorPrimary"
                android:textStyle="bold"
                android:layout_weight="1"
                android:fontFamily="@font/sans"
                android:textSize="@dimen/small_sixteen_text_size"/>
            <EditText
                android:id="@+id/password"
                android:layout_width="0dp"
                android:layout_height="@dimen/layout_height_register"
                android:hint="Password"
                android:layout_marginLeft="16dp"
                android:paddingLeft="10dp"
                android:layout_weight="2"
                android:background="@drawable/button_backgroung_rectangle"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="10dp">
            <TextView
                android:layout_width="0dp"
                android:layout_height="50dp"
                android:text="confirm Password"
                android:textColor="@color/colorPrimary"
                android:textStyle="bold"
                android:fontFamily="@font/sans"
                android:layout_weight="1"
                android:textSize="@dimen/small_sixteen_text_size"/>
            <EditText
                android:id="@+id/confirm_password"
                android:layout_width="0dp"
                android:layout_height="@dimen/layout_height_register"
                android:hint="Confirm password"
                android:layout_marginLeft="16dp"
                android:paddingLeft="10dp"
                android:layout_weight="2"
                android:background="@drawable/button_backgroung_rectangle"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="10dp">
            <TextView
                android:layout_width="0dp"
                android:layout_height="@dimen/layout_height_register"
                android:text="Mobile Phone"
                android:textColor="@color/colorPrimary"
                android:textStyle="bold"
                android:layout_weight="1"
                android:fontFamily="@font/sans"
                android:textSize="@dimen/small_sixteen_text_size"/>
            <EditText
                android:id="@+id/mobile"
                android:layout_width="0dp"
                android:layout_height="@dimen/layout_height_register"
                android:hint="Contact no."
                android:layout_marginLeft="16dp"
                android:paddingLeft="10dp"
                android:layout_weight="2"
                android:background="@drawable/button_backgroung_rectangle"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="10dp">
            <TextView
                android:layout_width="0dp"
                android:layout_height="@dimen/layout_height_register"
                android:text="Address"
                android:textColor="@color/colorPrimary"
                android:textStyle="bold"
                android:layout_weight="1"
                android:fontFamily="@font/sans"
                android:textSize="@dimen/small_sixteen_text_size"/>
            <EditText
                android:id="@+id/address"
                android:layout_width="0dp"
                android:layout_height="@dimen/layout_height_register"
                android:hint="Address"
                android:layout_marginLeft="16dp"
                android:paddingLeft="10dp"
                android:layout_weight="2"
                android:background="@drawable/button_backgroung_rectangle"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="10dp">
            <TextView
                android:layout_width="0dp"
                android:layout_height="@dimen/layout_height_register"
                android:text="DOB"
                android:textColor="@color/colorPrimary"
                android:textStyle="bold"
                android:layout_weight="1"
                android:fontFamily="@font/sans"
                android:textSize="@dimen/small_sixteen_text_size"/>

            <TextView
                android:id="@+id/btnDate"
                android:layout_width="0dp"
                android:layout_height="@dimen/layout_height_register"
                android:layout_weight="2"
                android:gravity="center_vertical"
                android:hint="Apr.08 2018"
                android:padding="10dp"
                android:layout_marginLeft="16dp"
                android:drawablePadding="5dp"
                android:drawableLeft="@drawable/ic_action_calender"
                android:background="@drawable/button_backgroung_rectangle"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginBottom="10dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Interest"
                android:textColor="@color/colorPrimary"
                android:textStyle="bold"
                android:layout_weight="1"
                android:fontFamily="@font/sans"
                android:textSize="@dimen/small_sixteen_text_size"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:paddingLeft="60dp"
                android:paddingTop="10dp"
                android:layout_marginBottom="10dp">

                <CheckBox
                    android:id="@+id/cJava"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:textColor="@color/colorPrimary"
                    android:text="Java" />

                <CheckBox
                    android:id="@+id/cAndroid"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:textColor="@color/colorPrimary"
                    android:text="Android" />

                <CheckBox
                    android:id="@+id/cPhp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:textColor="@color/colorPrimary"
                    android:text="Php" />

                <CheckBox
                    android:id="@+id/cPython"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:textColor="@color/colorPrimary"
                    android:text="Python" />

                <CheckBox
                    android:id="@+id/cJavaScript"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:textColor="@color/colorPrimary"
                    android:text="JavaScript" />

                <CheckBox
                    android:id="@+id/cRuby"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:textColor="@color/colorPrimary"
                    android:text="Ruby" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="@dimen/layout_height_register"
                    android:text="Descrition"
                    android:textColor="@color/colorPrimary"
                    android:textStyle="bold"
                    android:layout_weight="1"
                    android:fontFamily="@font/sans"
                    android:textSize="@dimen/small_sixteen_text_size"/>

                <EditText
                    android:id="@+id/description"
                    android:layout_weight="2"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:maxLines="5"
                    android:minLines="5"
                    android:maxLength="5000"
                    android:hint="Description"
                    android:textColor="@color/black"
                    android:gravity="top|left"
                    android:inputType="textPersonName|textMultiLine"
                    android:background="@drawable/button_backgroung_rectangle"/>

            </LinearLayout>

        </LinearLayout>

        <Button
            android:id="@+id/registerBtn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="create"
            android:fontFamily="@font/sans"
            android:layout_marginRight="20dp"
            android:layout_marginLeft="20dp"
            android:layout_marginBottom="10dp"
            android:background="@color/colorOrange"
            android:textColor="@color/colorWhite"/>
    </LinearLayout>

</ScrollView>